%section.intro-section
  .container
    %h1= t('.title')
    %p= t('.contact_us')
    %div.row
      %div.col-sm-6
        = form_tag request_contact_path, class: "form-floating.mb3", method: 'post' do
          = label_tag :name, t('.name')
          = text_field_tag :name, '', title: t('.enter_name'), class: "form-control", style: "width: auto", :placeholder => "name"

          = label_tag :email, t('.email')

          = email_field_tag :email, '', title: t('.enter_email'), class: "form-control", style: "width: auto", :placeholder => "name@example.com"

          = label_tag :telephone, t('.telephone')
          = telephone_field_tag :telephone, '', title: t('.enter_telephone'), class: "form-control", style: "width: auto", placeholder: "+44"

          = label_tag :message, t('.message')
          = text_field_tag :message, '', title: t('.enter_message'), class: "form-control",style: "height: 100px; width: 200px", :placeholder => "Leave a comment here"



          %br
          = submit_tag t('.submit'), class: "btn rounded-pill btn-rounded"
        %br
      %div.col-sm-6
        %i.fas.fa-shipping-fast.fa-10x.contact_i
